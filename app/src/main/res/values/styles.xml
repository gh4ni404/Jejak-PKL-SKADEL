    <style name="Text.Heading" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Subheading" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Text.Label" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorHint</item>
    </style>
    <style name="Text.Hint" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorHint</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Text.Error" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Text.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="Text.Link" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorLink</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    Main Page -->
<!--    <style name="Text.Body" parent="TextAppearance.Material3.BodyLarge">-->
<!--        <item name="android:textSize">16sp</item>-->
<!--        <item name="android:textColor">?attr/colorOnSurface</item>-->
<!--    </style>-->
    <style name="Text.Body" parent="TextAppearance.Material3.BodyMedium" />
    <style name="Text.Secondary" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/colorOnSurfaceVariant</item>
    </style>

    <style name="Text.Success" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">?attr/colorSuccess</item>
    </style>

    <style name="Text.Warning" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/warning</item>
    </style>

<!--    FORM -->
    <style name="EditText.Layout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">?attr/colorOutlineOnSurface</item>
        <item name="hintTextColor">?attr/colorHint</item>
        <item name="helperTextTextAppearance">@style/Text.Hint</item>
        <item name="errorTextAppearance">@style/Text.Error</item>
    </style>

    <style name="EditText.Edit" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    LOGIN BUTTON -->
    <style name="Button.Login" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">14sp</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Button.GoogleLogin" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:strokeColor">?attr/colorOutline</item>
        <item name="android:strokeWidth">1.5</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Filled" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.CardMenu" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <!-- styles.xml -->
    <style name="Widget.App.TextInputLayout.RoundedDark" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceContainer</item>

    </style>

</resources>